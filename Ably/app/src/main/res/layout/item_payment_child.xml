<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="left"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/payment_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/payment_rbt_toss"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLighterGrey"/>

            <RadioButton
                android:id="@+id/payment_rbt_card"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLighterGrey"/>

            <RadioButton
                android:id="@+id/payment_rbt_deposit"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLighterGrey"/>

            <RadioButton
                android:id="@+id/payment_rbt_phone"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/payment_toss"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:src="@drawable/logo_toss"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토스"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterGrey"/>

        <LinearLayout
            android:id="@+id/payment_card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드결제"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterGrey"/>

        <LinearLayout
            android:id="@+id/payment_deposit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무통장입금"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적립금 1% 추가적립!"
                android:textSize="14sp"
                android:textColor="@color/colorBlue"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterGrey"/>

        <LinearLayout
            android:id="@+id/payment_phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰 결제"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>