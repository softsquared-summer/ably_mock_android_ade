<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/new_address_et_receiver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="받는 분"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        android:paddingVertical="8dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/new_address_et_postal_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="16dp"
            android:hint="우편번호"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:textSize="16sp"
            android:paddingVertical="8dp"
            android:layout_weight="3"/>
        
        <Button
            android:id="@+id/new_address_btn_post_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button_white"
            android:text="우편번호 검색"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="7"/>
        
    </LinearLayout>

    <EditText
        android:id="@+id/new_address_et_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="주소"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        android:paddingVertical="8dp"/>

    <EditText
        android:id="@+id/new_address_et_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="상세주소"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        android:paddingVertical="8dp"/>

    <EditText
        android:id="@+id/new_address_et_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="연락처"
        android:inputType="phone"
        android:maxLines="1"
        android:imeOptions="actionNone"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        android:paddingVertical="8dp"/>

</LinearLayout>