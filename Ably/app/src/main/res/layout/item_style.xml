<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/round_layout"
    app:layout_constrainedWidth="false">

    <ImageView
        android:id="@+id/item_style_iv_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_style_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_style_tv_uploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="uploader"
        android:textColor="@color/colorGrey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/item_style_iv_image"
        app:layout_constraintTop_toBottomOf="@+id/item_style_iv_image" />

    <TextView
        android:id="@+id/item_style_tv_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="title"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/item_style_iv_image"
        app:layout_constraintTop_toBottomOf="@+id/item_style_tv_uploader" />

</androidx.constraintlayout.widget.ConstraintLayout>