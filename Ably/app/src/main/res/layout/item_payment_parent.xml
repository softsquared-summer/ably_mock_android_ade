<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:layout_gravity="left"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="24dp" >

        <TextView
            android:id="@+id/payment_tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="결제방법"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payment_tv_selected_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/payment_tv_payment"
            app:layout_constraintStart_toEndOf="@+id/payment_tv_payment"
            app:layout_constraintTop_toTopOf="@+id/payment_tv_payment" />

</androidx.constraintlayout.widget.ConstraintLayout>